---
import Link from 'components/Link.astro'
import BaseLayout from 'layouts/BaseLayout.astro'
import type { Frontmatter } from 'lib/types'

const allPosts = await Astro.glob<Frontmatter>('../*.mdx')
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())]
---

<BaseLayout
  title="Tags - Emmanuel Chucks"
  description="All tags used in my blog posts"
>
  <div class="space-y-8 px-4">
    <h1 class="text-3xl font-bold">Tags</h1>
    <ul class="grid grid-cols-2 gap-y-4">
      {
        tags.map((tag) => (
          <li class="text-xl font-medium">
            <Link url={`/blog/tags/${tag}`}>{tag}</Link>
          </li>
        ))
      }
    </ul>
  </div>
</BaseLayout>
